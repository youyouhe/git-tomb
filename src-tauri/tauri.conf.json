{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:30018",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Repo Graveyard",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "clipboard": {
        "all": false,
        "writeText": true
      }
    },
    "bundle": {
      "active": true,
      "targets": ["msi"],
      "identifier": "com.repograveyard.app",
      "icon": ["icons/icon.ico"]
    },
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://api.github.com https://*.supabase.co https://*.googleapis.com https://esm.sh;"
    },
    "windows": [
      {
        "title": "Repo Graveyard",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "transparent": false
      }
    ]
  }
}